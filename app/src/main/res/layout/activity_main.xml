    <EditText
        android:id="@+id/msgEditTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30px"
        android:hint="Your message" />

    <Button
        android:layout_width="wrap_content"
